{
  "scripts": {
    "build": "npm run ts && npm run sass",
    "sass": "sass --no-source-map assets/scss/index.scss assets/css/index.css",
    "ts": "tsc",
    "watch:sass": "sass --watch --no-source-map assets/scss/index.scss assets/css/index.css",
    "watch:ts": "tsc  --no-source-map assets/scss/index.scss assets/css/index.css",
    "format": "npm run format:js && npm run format:scss",
    "format:js": "eslint resources/scripts --ext .ts --fix",
    "format:scss": "stylelint \"resources/**/*.{scss}\" --fix"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/youtube-player": "^5.5.7",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "normalize.css": "^8.0.1",
    "sass": "^1.59.2",
    "stylelint": "^15.2.0",
    "typescript": "^4.9.5",
    "youtube-player": "^5.6.0"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "browserify": "^17.0.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "tsify": "^5.0.4",
    "vinyl-source-stream": "^2.0.0"
  }
}
